@using WBPR.Base.Config
@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims
@inject NavigationManager NavigationManager

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <MudText>Hello, <b>@context.User.FindFirst(ClaimTypes.Name)?.Value</b></MudText>
            <MudMenu Icon="@Icons.Filled.AccountCircle">
                <MudMenuItem Icon="@Icons.Filled.Logout" Color="Color.Inherit" Edge="Edge.Start" OnClick="Logout">Logout</MudMenuItem>
            </MudMenu>
        </Authorized>
        <NotAuthorized>
            <MudIconButton Icon="@Icons.Filled.Login" Color="Color.Inherit" Edge="Edge.Start" OnClick="Login" />
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code{

    private void Logout()
    {
        NavigationManager.NavigateTo(Constant.LOGOUT_URL, forceLoad: true);
    }

    private void Login()
    {
        NavigationManager.NavigateTo(Constant.GOOGLE_LOGIN_URL, forceLoad: true);
    }
}